<!DOCTYPE html>
<html lang="en-US">

<head>
	<%- include("parts/head") %>
	<script src="/js/login.js" defer></script>
</head>

<body>
	<%- include("parts/topbar") %>
	<div class="bb1" style="margin-bottom: 5%;">
		<h1 class="title center text-white">Sparklet Login</h1>
	</div>

	<div class="bb1 container">
		<form action="/login" method="post" id="loginForm">
			<div class="form-group mx-auto mb-4">
				<input class="form-control" id="conductor"
					placeholder="Conductor ID" type="text">
			</div>
			
			<div class="form-group mx-auto mb-5">
				<input class="form-control" id="password"
					placeholder="Password" type="password">
			</div>
		
			<input type="submit" value="Start"
				class="btn btn-primary border-black mx-auto">
		</form>
	</div>
</body>

</html>
