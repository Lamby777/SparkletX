<!DOCTYPE html>
<html>

<head>
	<%- include("parts/head") %>
	<%- include("parts/afterhead") %>
</head>

<body>
	<%- include("parts/topbar") %>
	<div class="bb1" style="margin-bottom: 5%;">
		<h1 class="title center">Sparklet Login</h1>
	</div>

	<div class="bb1 container" id="jessLoginBB" style="margin-bottom: 10%; padding-bottom: 15%">
		<form action="/login" method="post">
			<div id="formContent container">
				<div class="formLine col-6">
					<label for="CID">Conductor ID</label>
					<input name="CID" type="text"
					<% if (typeof jessLoginError !== "undefined" && jessLoginError === "Login 404") { %>
						style="background: red;"<% } %> >
				</div>
				<div class="formLine">
					<label for="Password">Password</label>
					<input name="Password" autocomplete="off" type="password"
					<% if (typeof jessLoginError !== "undefined" && jessLoginError === "Login Password Failed") { %>
						style="background: red;"<% } %> >
				</div>
			</div>

			<input type="submit" value="Start">
		</form>
	</div>
	
	<!-- Required for margins -->
	<br>
</body>

</html>
